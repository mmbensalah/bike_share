<h1>Log In</h1>

<div class="login-form">
  <%= form_tag login_path do %>
    <div class="form-group">
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag "Log In" %>
  <% end %>
</div>
