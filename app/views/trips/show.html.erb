<h1 class='text-center'>Trip <%= @trip.id %> Show Page</h1>
<%= link_to "Back to All Trips", trips_path, class: 'text-center'%>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Duration</th>
      <th scope="col">Start Date</th>
      <th scope="col">Start Station</th>
      <th scope="col">Zip Code</th>
      <th scope="col">Bike ID</th>
      <th scope="col">End Date</th>
      <th scope="col">End Station</th>
      <th scope="col">Subscription Type</th>
      <% if current_admin? %>
      <th scope="col">Admin Options</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @trip.duration %></td>
      <td><%= @trip.start_date %></td>
      <td><%= @trip.start_station_id %></td>
      <td><%= @trip.zip_code %></td>
      <td><%= @trip.bike_id %></td>
      <td><%= @trip.end_date %></td>
      <td><%= @trip.end_station_id %></td>
      <td><%= @trip.subscription_type %></td>
      <% if current_admin? %>
      <td>
        <%= link_to "Edit", edit_admin_trip_path, class: "btn btn-warning" %>
        <%= link_to "Delete", admin_trip_path, method: :delete, class: "btn btn-danger"
            data: {confirm: "Are you sure you want to delete this trip?"} %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>
